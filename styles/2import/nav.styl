
.nav.nav-second-points.gradient
  .nav-link.active, .nav-link:hover
    position relative
    background linear-gradient(90deg, #610289 0.01%, #A9148A 52%, #E9006D 100%)
    -webkit-background-clip text
    -webkit-text-fill-color #610289
    border-bottom 0px !important

    &::before
      content ''
      position absolute
      left 0
      right 0
      bottom 0
      width 100%
      height 4px
      background linear-gradient(90deg, #610289 0.01%, #A9148A 52%, #E9006D 100%)

.nav.nav-second-points.vertical
  flex-direction column
  border-left 1px solid color-primary

  .nav-link
    padding-top 0
    padding-bottom 0
    font-size font-size-big
    color color-muted
    border-left 3px solid transparent

  .nav-link.active
    color color-primary
    border-left 3px solid color-primary

.nav.nav-second-points.horizontal
  height calc(100% - 8px)
  flex-direction row
  flex-wrap nowrap
  border-bottom 1px solid grey-alto

  .nav-link
    height calc(100% + 1px)
    width 50%
    text-align center
    padding-top 7px
    padding-bottom 7px
    font-size font-size-big
    font-weight 600
    color color-muted
    border-bottom 3px solid transparent

  .nav-link.active
    color color-primary
    border-bottom 3px solid color-primary

.nav.nav-second-points.no-full
  .nav-link
    width max-content
      
.nav.nav-second-points
  &.step-2 .nav-link
    width calc((100% / 2))

  &.step-3 .nav-link
    width calc((100% / 3))

  &.step-4 .nav-link
    width calc((100% / 4))

  &.step-5 .nav-link
    width calc((100% / 5))

  &.step-6 .nav-link
    width calc((100% / 6))

.nav.nav-pointings
  margin-bottom 3px

  .nav-link
    border-bottom 3px solid transparent
    margin-bottom -3px
    padding-left 0
    padding-right 0

  .nav-link:not(:first-child)
    margin-left 5px

  .nav-link.active
    font-weight bold

.nav.nav-pointings.nav-large
  .nav-link
    line-height 20px
    padding-top 15px
    padding-bottom 12px
    min-width 63px
    text-align center

  .nav-link:not(:first-child)
    margin-left 40px

.nav.nav-pointings.nav-primary
  .nav-link
    color color-muted

  .nav-link.active
    color color-primary
    border-color color-primary

.nav.nav-basic.nav-primary
  .nav-link.active
    color color-primary
    font-weight bold

  .nav-link
    color color-muted

.navbar-dark .navbar-nav .color-white .nav-link
  color white !important
  padding 7px

.navbar-dark .navbar-nav .color-white .nav-link
  color white !important
  padding 20px

.navbar-dark .navbar-nav .color-white .nav-link span
  margin-right 7px

.black-dropdown.account > a
  padding 4.5px 8px !important
  display flex
  align-items center

.black-dropdown.account > a > span
  display inline-block
  max-width 120px
  overflow hidden
  text-overflow ellipsis
  line-height 46px
  padding 0px

.black-dropdown.account > a::after
  display unset

.black-dropdown.account > a::before
  //content url('~@/assets/landing/my_account.png')
  display block
  width 30px
  height 7px
  float left
  margin-right 35px
  transform scale(0.3)

.navbar-dark .navbar-nav .color-white .nav-link:hover, .navbar-dark .navbar-nav .color-white .nav-link:hover:focus
  background-color blue-astronaut

@media computerAndTablet
  .nav-md-justified .nav-item
    -ms-flex-preferred-size 0
    flex-basis 0
    -ms-flex-positive 1
    -webkit-box-flex 1
    flex-grow 1
    text-align center