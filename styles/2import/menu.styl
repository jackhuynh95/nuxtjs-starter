.el-menu.el-menu-vertical-custom
  z-index 1

  .el-menu-item
    margin-bottom 16px
    font-size font-size-big
    font-weight 600

  .el-menu-item:last-child
    margin-bottom 0

  // mode hover
  .el-menu-item:hover
    background-color color-primary
    color white !important

    svg.el-menu-icon path
      fill white

  // mode active
  .el-menu-item.is-active
    position relative
    background-color color-primary
    color white !important
  
    &::before
      content ""
      position absolute
      top 3px
      left 3px
      right 0
      width 100%
      height 100%
      background rose-pink
      border-radius 0
      z-index -1
  
    svg.el-menu-icon path
      fill white

.rank 
  position relative
  background-color color-primary
  color white !important

  &::before
    content ""
    position absolute
    top 3px
    left 3px
    right 0
    width 100%
    height 100%
    background rose-pink
    border-radius 0
    z-index -1

  svg.el-menu-icon path
    fill white
    
.rank.vip
  background linear-gradient(90deg, #610289 0.01%, #A9148A 52%, #E9006D 100%)

.el-menu-course.el-menu--horizontal
  border-bottom none
  border-radius 4px
  >.el-submenu 
    .el-submenu__title
      height 40px
      // padding 0
      color #404040
      font-weight 500
      font-size 16px
      line-height 40px
      border-radius 4px
      border-bottom none
.el-menu--horizontal .el-menu 
  .el-menu-item,
  .el-submenu .el-submenu__title
    color #404040 !important
    font-weight 500 !important
    font-size 16px !important
    &:hover, &.active 
      background #554BB9
      color white !important
      .el-submenu__icon-arrow 
        color white

  .el-submenu.is-opened
    .el-submenu__title
      background #554BB9
      color white !important
      .el-submenu__icon-arrow 
        color white
.el-menu--horizontal.scroll-bar-beauty
  .el-menu
    max-height 324px
    overflow auto
    
  .el-menu::-webkit-scrollbar
    width 6px
    background-color rgba(#9d9d9d, 0.1)
    height 500px
    overflow auto

  .el-menu::-webkit-scrollbar-thumb
    border 1px solid white
    background-color rgba(#9d9d9d, 0.8)
    border-radius 6px
    
      

   
  
