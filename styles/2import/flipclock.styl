
/* Skeleton */
.flip-play
  .unit
    @media (max-width: 767px)
      font-size 14px

  .doted
    color #fff
    font-size 50px
    line-height 0
    margin-top 2.25rem

    @media (max-width: 767px)
      font-size 25px

ul.flip
  position relative
  float left
  margin 5px
  width 45px
  height 73px
  font-family 'Oswald'
  font-style normal
  font-weight bold
  font-size 65px
  line-height 73px
  border-radius 6px
  box-shadow 0 2px 5px rgba(0, 0, 0, 0.7)
  list-style none
  overflow hidden

  @media (max-width: 767px)
    font-size 45px
    margin 5px 2px
    padding 0
    width 38px
    height 60px
    line-height 60px

  @media (max-width: 400px)
    font-size 40px
    width 28px
    height 55px
    line-height 55px

ul.flip li
  z-index 1
  position absolute
  left 0
  top 0
  width 100%
  height 100%

ul.flip li:first-child
  z-index 2

ul.flip li a
  display block
  height 100%
  perspective 200px

ul.flip li a div
  z-index 1
  position absolute
  left 0
  width 100%
  height 50%
  overflow hidden

ul.flip li a div .shadow
  position absolute
  width 100%
  height 100%
  z-index 2

ul.flip li a div.up
  transform-origin 50% 100%
  top 0

ul.flip li a div.up:after
  content ''
  position absolute
  top 35px
  left 0
  z-index 5
  width 100%
  height 3px
  background-color rgba(0, 0, 0, 0.4)

  @media (max-width: 767px)
    top 29px

  @media (max-width: 400px)
    top 26px

ul.flip li a div.down
  transform-origin 50% 0%
  bottom 0

ul.flip li a div div.inn
  position absolute
  left 0
  z-index 1
  width 100%
  height 200%
  color #fff
  text-shadow 0 1px 2px #000
  text-align center
  background-color #5f1f21
  border-radius 6px
  border 1px solid rgba(255, 255, 255, 0.4)

ul.flip li a div.up div.inn
  top 0

ul.flip li a div.down div.inn
  bottom 0

/* PLAY */
ul.flip li.before
  z-index 3

ul.flip li.active
  animation asd 0.5s 0.5s linear both
  z-index 2

@keyframes asd
  0%
    z-index 2

  5%
    z-index 4

  100%
    z-index 4

ul.flip li.active .down
  z-index 2
  animation turn 0.5s 0.5s linear both
  will-change transform

@keyframes turn
  0%
    transform rotateX(90deg) translate3d(0, 0, 0)

  100%
    transform rotateX(0deg) translate3d(0, 0, 0)

ul.flip li.before .up
  z-index 2
  animation turn2 0.5s linear both
  will-change transform

@keyframes turn2
  0%
    transform rotateX(0deg) translate3d(0, 0, 0)

  100%
    transform rotateX(-90deg) translate3d(0, 0, 0)

/* SHADOW */
ul.flip li.before .up .shadow
  background linear-gradient(to bottom, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 1) 100%)
  animation show 0.5s linear both

ul.flip li.active .up .shadow
  background linear-gradient(to bottom, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 1) 100%)
  animation hide 0.5s 0.3s linear both

/* DOWN */
ul.flip li.before .down .shadow
  background linear-gradient(to bottom, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 0.1) 100%)
  animation show 0.5s linear both

ul.flip li.active .down .shadow
  background linear-gradient(to bottom, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 0.1) 100%)
  animation hide 0.5s 0.3s linear both

@keyframes show
  0%
    opacity 0

  100%
    opacity 1

@keyframes hide
  0%
    opacity 1

  100%
    opacity 0