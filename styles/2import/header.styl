.table-header
  color red-milano
  font-size 20px
  text-transform uppercase
  font-weight bold
  line-height normal
  margin-top 5rem
  border-bottom 4px solid red-milano
  display inline-block
  padding-bottom 4px
  margin-bottom 16px
  letter-spacing -0.5px

.invalid
  color block
  font-size 20px
  font-weight bold
  line-height normal
  letter-spacing -0.5px

.h1
  font-size 64px
  color blue-pickled-bluewood
  font-weight 600
  line-height initial

.h2
  font-size 36px
  color blue-pickled-bluewood
  font-weight 600
  line-height initial

.h3.h3--1
  font-size 28px
  color blue-pickled-bluewood
  font-weight 600
  line-height initial

.h3
  font-size 24px
  color blue-pickled-bluewood
  font-weight 600
  line-height initial

.h4
  font-size 20px
  color blue-pickled-bluewood
  font-weight 600
  line-height initial

.h5
  font-size 18px
  color blue-pickled-bluewood
  font-weight 600
  line-height initial

.h6
  font-size 14px
  color blue-pickled-bluewood
  font-weight 600
  line-height initial

.h5.black, .h6.black
  color #000

